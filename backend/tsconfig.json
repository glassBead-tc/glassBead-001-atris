{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "app/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
