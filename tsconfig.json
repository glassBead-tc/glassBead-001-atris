{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "rootDir": "./",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["backend/app/**/*", "backend/src/**/*"],
  "exclude": [
    "node_modules",
    "test/**"
  ]
}
