{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "lib/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}
